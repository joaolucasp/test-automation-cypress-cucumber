{
  "env": {
    "browser": true,
    "es2020": true,
    "cypress/globals": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"]
  }
}
